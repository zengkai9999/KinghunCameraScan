<Window x:Class="CameraScan.ReNameDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xi="clr-namespace:CameraScan" 
        Title="{DynamicResource lanRenameDlgTitle}" Height="130" Width="250"  WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Loaded="Window_Loaded">
    <StackPanel Orientation="Vertical">

        <Label Content="{DynamicResource lanLabelInputName}"></Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Name="RnTextBox" Width="150" TextChanged="RnTextBox_TextChanged"></TextBox>
            <Label Content=".jpg" Name="suffixLabel" Margin="5,0,0,0"></Label>
        </StackPanel>
        <xi:ImageButton x:Name="ExitBt"  Content="{DynamicResource lanBtOK}" FontSize="13" ImageHeight="0" ImageWidth="0"  Width="52" Height="30" Margin="5,12,5,5"   BorderBrush="SlateGray" BorderThickness="0.4" Padding="2,2,2,7" Click="ExitBt_Click" />
        
    </StackPanel>
</Window>
