<Window x:Class="CameraScan.FixedNameDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xi="clr-namespace:CameraScan"
        Title="{DynamicResource lanRaBNameFixed}" Height="105" Width="320" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="2,8,2,5">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="{DynamicResource lanLabelInFileName}"></Label>
                <TextBox Name="RnTextBox" Width="180" TextChanged="RnTextBox_TextChanged" PreviewKeyDown="RnTextBox_PreviewKeyDown"></TextBox>
            </StackPanel>
            <xi:ImageButton x:Name="ExitBt"  Content="{DynamicResource lanBtOK}" FontSize="12" ImageHeight="0" ImageWidth="0"  Width="100" Height="23" Margin="5,10,5,5"   BorderBrush="SlateGray" BorderThickness="0.3" Padding="2,2,2,4" Click="ExitBt_Click" />

        </StackPanel>
    </Grid>
</Window>
